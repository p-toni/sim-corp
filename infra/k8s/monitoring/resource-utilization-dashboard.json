{
  "dashboard": {
    "id": null,
    "uid": "sim-corp-resources",
    "title": "Sim-Corp Resource Utilization & Autoscaling",
    "tags": ["sim-corp", "resources", "autoscaling", "kubernetes"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "type": "graph",
        "title": "CPU Usage by Service",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"simcorp\"}[5m])) by (pod) * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU Usage %",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "nullPointMode": "null",
        "thresholds": [
          {
            "value": 70,
            "colorMode": "custom",
            "op": "gt",
            "fill": true,
            "line": true,
            "fillColor": "rgba(255, 150, 0, 0.2)",
            "lineColor": "rgb(255, 150, 0)"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "type": "graph",
        "title": "Memory Usage by Service",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"simcorp\"}) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "mbytes",
            "label": "Memory Usage",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "nullPointMode": "null",
        "thresholds": []
      },
      {
        "id": 3,
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "type": "graph",
        "title": "Pod Replica Count",
        "targets": [
          {
            "expr": "kube_deployment_status_replicas{namespace=\"simcorp\"}",
            "legendFormat": "{{deployment}} (current)",
            "refId": "A"
          },
          {
            "expr": "kube_deployment_spec_replicas{namespace=\"simcorp\"}",
            "legendFormat": "{{deployment}} (desired)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Replicas",
            "show": true,
            "decimals": 0
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "nullPointMode": "null",
        "steppedLine": true
      },
      {
        "id": 4,
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "type": "graph",
        "title": "HPA Status",
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas{namespace=\"simcorp\"}",
            "legendFormat": "{{horizontalpodautoscaler}} (current)",
            "refId": "A"
          },
          {
            "expr": "kube_horizontalpodautoscaler_status_desired_replicas{namespace=\"simcorp\"}",
            "legendFormat": "{{horizontalpodautoscaler}} (desired)",
            "refId": "B"
          },
          {
            "expr": "kube_horizontalpodautoscaler_spec_max_replicas{namespace=\"simcorp\"}",
            "legendFormat": "{{horizontalpodautoscaler}} (max)",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Replicas",
            "show": true,
            "decimals": 0
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "nullPointMode": "null",
        "steppedLine": true
      },
      {
        "id": 5,
        "gridPos": { "x": 0, "y": 16, "w": 8, "h": 6 },
        "type": "gauge",
        "title": "CPU Utilization vs Target",
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{namespace=\"simcorp\"}[5m])) by (pod) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 70, "color": "orange" },
                { "value": 90, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "x": 8, "y": 16, "w": 8, "h": 6 },
        "type": "gauge",
        "title": "Memory Utilization vs Target",
        "targets": [
          {
            "expr": "(sum(container_memory_usage_bytes{namespace=\"simcorp\"}) by (pod) / sum(container_spec_memory_limit_bytes{namespace=\"simcorp\"}) by (pod)) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 60, "color": "yellow" },
                { "value": 80, "color": "orange" },
                { "value": 95, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": { "x": 16, "y": 16, "w": 8, "h": 6 },
        "type": "stat",
        "title": "Total Pods Running",
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace=\"simcorp\", phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "yellow" },
                { "value": 2, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": { "x": 0, "y": 22, "w": 24, "h": 8 },
        "type": "table",
        "title": "Resource Utilization Summary",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"simcorp\"}[5m])) by (pod) * 100",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"simcorp\"}) by (pod) / 1024 / 1024",
            "format": "table",
            "instant": true,
            "refId": "B"
          },
          {
            "expr": "sum(container_spec_memory_limit_bytes{namespace=\"simcorp\"}) by (pod) / 1024 / 1024",
            "format": "table",
            "instant": true,
            "refId": "C"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "pod": "Pod",
                "Value #A": "CPU %",
                "Value #B": "Memory (MB)",
                "Value #C": "Memory Limit (MB)"
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\",namespace=\"simcorp\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
