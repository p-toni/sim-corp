# Sim-Corp Production Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# General
# ============================================================================
LOG_LEVEL=info
NODE_ENV=production

# ============================================================================
# Authentication (Clerk)
# ============================================================================
AUTH_MODE=clerk
CLERK_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_REPLACE_WITH_YOUR_SECRET_KEY

# ============================================================================
# LM-as-Judge (Optional)
# ============================================================================
LM_JUDGE_ENABLED=false
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_YOUR_API_KEY
LM_JUDGE_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# Auto-Evaluation
# ============================================================================
AUTO_EVAL_ENABLED=true
EVAL_SERVICE_URL=http://eval:4007
COMMAND_SERVICE_URL=http://command:3004

# ============================================================================
# Device Identity
# ============================================================================
DEVICE_KEYSTORE_PATH=/app/var/device-keys

# ============================================================================
# Driver Configuration
# ============================================================================
DRIVER_TYPE=fake
# For real hardware, set to tcp-line or bullet-r1-usb

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL (Production)
DATABASE_TYPE=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=simcorp
POSTGRES_USER=simcorp
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# SQLite paths (for DATABASE_TYPE=sqlite)
KERNEL_DB_PATH=/app/var/kernel/kernel.db
INGESTION_DB_PATH=/app/var/ingestion/ingestion.db
COMMAND_DB_PATH=/app/var/command/command.db
EVAL_DB_PATH=/app/var/eval/eval.db

# ============================================================================
# Backup & Disaster Recovery
# ============================================================================

# Backup Schedule
HOURLY_BACKUP=true
HOURLY_INTERVAL=3600        # 1 hour in seconds
DAILY_BACKUP=true
DAILY_TIME=02:00            # 2 AM UTC
WEEKLY_BACKUP=false
WEEKLY_DAY=0                # 0 = Sunday
WEEKLY_TIME=03:00           # 3 AM UTC

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip     # gzip, zstd, none
BACKUP_ENCRYPTION=false     # Set to true for production
BACKUP_ENCRYPTION_KEY=REPLACE_WITH_STRONG_PASSPHRASE

# Storage Backend
BACKUP_STORAGE=local        # local, s3, gcs

# S3 Configuration (if BACKUP_STORAGE=s3)
BACKUP_S3_BUCKET=sim-corp-backups-prod
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1

# GCS Configuration (if BACKUP_STORAGE=gcs)
BACKUP_GCS_BUCKET=sim-corp-backups-prod
# Set GOOGLE_APPLICATION_CREDENTIALS path in docker-compose volumes
