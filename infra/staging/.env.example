# Sim-Corp Staging Environment Variables
# Copy this file to .env and customize as needed

# ============================================================================
# General
# ============================================================================
LOG_LEVEL=debug
NODE_ENV=staging

# ============================================================================
# Authentication
# ============================================================================
# For staging, you can use 'none' to disable authentication
AUTH_MODE=none

# Or configure Clerk for testing with real auth
# AUTH_MODE=clerk
# CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
# CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# ============================================================================
# LM-as-Judge (Optional)
# ============================================================================
# Enable for AI-powered evaluation
LM_JUDGE_ENABLED=false
ANTHROPIC_API_KEY=
LM_JUDGE_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# Auto-Evaluation
# ============================================================================
AUTO_EVAL_ENABLED=true

# ============================================================================
# Driver Configuration
# ============================================================================
# Use 'fake' for testing without hardware
DRIVER_TYPE=fake
# For real hardware: tcp-line, bullet-r1-usb
