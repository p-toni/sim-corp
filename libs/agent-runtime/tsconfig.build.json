{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "tests", "vitest.config.ts"],
  "references": [
    { "path": "../schemas/tsconfig.json" }
  ]
}
